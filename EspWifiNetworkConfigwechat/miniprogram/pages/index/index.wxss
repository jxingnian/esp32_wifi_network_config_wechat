/**index.wxss**/
.container {
  padding: 40rpx;
  box-sizing: border-box;
}

.author {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 60rpx;
  font-weight: bold;
}

.tip-section {
  width: 100%;
  background: #f8f8f8;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.tip-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.tip-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.status-section {
  width: 100%;
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.status-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.status-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.status-label {
  font-size: 26rpx;
  color: #666;
  width: 200rpx;
}

.status-value {
  font-size: 26rpx;
  color: #ff4d4f;
}

.status-value.connected {
  color: #07c160;
}

.wifi-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.delete-btn {
  background: #ff4d4f;
}